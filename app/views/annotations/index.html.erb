<h1>Listing annotations</h1>

<table>
  <thead>
    <tr>
      <th>Label</th>
      <th>Priority</th>
      <th>Prefer user</th>
      <th>Text file</th>
      <th>Image files</th>
      <th>User</th>
      <th>Finished</th>
      <th>Skipped</th>
      <th>Appropriate</th>
      <th>Not appropriate</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @annotations.each do |annotation| %>
      <tr>
        <td><%= annotation.label %></td>
        <td><%= annotation.priority %></td>
        <td><%= annotation.prefer_user %></td>
        <td><%= annotation.text_file %></td>
        <td><%= annotation.image_files %></td>
        <td><%= annotation.user_id %></td>
        <td><%= annotation.finished %></td>
        <td><%= annotation.skipped %></td>
        <td><%= annotation.appropriate %></td>
        <td><%= annotation.not_appropriate %></td>
        <td><%= link_to 'Show', annotation %></td>
        <td><%= link_to 'Edit', edit_annotation_path(annotation) %></td>
        <td><%= link_to 'Destroy', annotation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Annotation', new_annotation_path %>
